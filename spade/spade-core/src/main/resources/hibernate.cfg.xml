<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- Hibernate Regular - for more see hibernate.properties -->
		<property name="connection.autocommit">true</property>
		<property name="show_sql">false</property>
		<property name="format_sql">false</property>
		<property name="use_sql_comments">false</property>

		<!-- C3P0 Connection Pooling: See hibernate.properties -->

		<!-- Entities -->
		<mapping class="info.interactivesystems.spade.entities.Product" />
		<mapping class="info.interactivesystems.spade.entities.Review" />
		<mapping class="info.interactivesystems.spade.entities.SentenceFrequency" />
		<mapping class="info.interactivesystems.spade.entities.SentenceSimilarity" />
		<mapping class="info.interactivesystems.spade.entities.ShadowReview" />
		<mapping class="info.interactivesystems.spade.entities.User" />

	</session-factory>
</hibernate-configuration>